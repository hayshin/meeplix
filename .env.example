# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/narrari
DB_HOST=localhost
DB_PORT=5432
DB_USER=narrari_user
DB_PASSWORD=your_password
DB_NAME=narrari

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# API Configuration
API_BASE_URL=http://localhost:3000

# Session/JWT Configuration (if using authentication)
JWT_SECRET=your_super_secret_jwt_key_here
SESSION_SECRET=your_session_secret_here

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Redis Configuration (if using caching)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# Email Configuration (if using email features)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
FROM_EMAIL=noreply@hayshin.dev

# External API Keys (add as needed)
# OPENAI_API_KEY=your_openai_key
# STRIPE_SECRET_KEY=your_stripe_key
# CLOUDINARY_CLOUD_NAME=your_cloudinary_name
# CLOUDINARY_API_KEY=your_cloudinary_key
# CLOUDINARY_API_SECRET=your_cloudinary_secret

# Production specific (uncomment for production)
# NODE_ENV=production
# PORT=3000
# DATABASE_URL=postgresql://production_user:production_password@localhost:5432/narrari_prod
# CORS_ORIGIN=https://hayshin.dev
# API_BASE_URL=https://api.hayshin.dev
